                      <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </form>                  
            </div>
        <div class="buscador">
            
            <div class="subMenu">
                <% if (typeof session.userLogged != "undefined" && session.userLogged.rol == 1) { %>
                <div class="pagos">
                    <h5><a href="/admin/products">Productos</a></h5>
                </div>
                <div class="ofertas">
                    <h5><a href="/admin/createProduct">Vender Producto</a></h5>
                </div>
                <% } %>
                <div class="categorias2">
                    <h5 class="palabra">Categorías</h5>
                    <div class="flecha">
                        <i class="fa-solid fa-caret-down"></i>
                    </div>
                    <div class="categoriaProductos2">
                        <h5><a href="/products/familiares">Familiares</a></h5>
