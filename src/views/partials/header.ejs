<header class="contenedor">
    <div class="contenedorHeaderMobileTablet">
        <div class="menu">
            <div class="barra">
                <span class="linea1"></span>
                <span class="linea2"></span>
                <span class="linea3"></span>
             </div>
        </div>
        <div class="logo">
            <a href="/"><img src="/images/sinfondo.png" alt="logo"></a>
            <h3 class="oculto">Juegos de mesa</h3>
        </div>
        <div class="buscador">
            <form action="/search" method="GET">
                <div class="barraBuscadora">
                    <input class="busqueda" type="search" id="search-bar" name="search" placeholder="¿A qué queres jugar?" >
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                <div id="texto">
                    <i id="voice-button" class="fa-solid fa-microphone"></i>
                </div>
            </form>
        </div>
        <div class="iconoBuscador">
                <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        </div>
        <div class="contenedorOculto">
            <div class="perfilCarrito">
                <div class="user">
                    <% if (typeof session.userLogged != "undefined") { %>
                        <span class="sessionMobile"></span>
                        <div class="sesionIniciada">
                            <i class="fa-regular fa-user"></i>
                            <h5><a href="">Perfil</a></h5>
                            <div class="flecha">
                                <i class="fa-solid fa-caret-down"></i>
                            </div>
                        </div>
                        <div class="menuUser">
                            <a href="/users/profile">Mis datos</a>
                            <a href="/users/logout">Cerrar sesión</a>
                            <% if (session.userLogged.rol === "admin") { %>
                                <a href="/admin/adminPerfil">ADMIN</a>
                            <% } %>
                        </div>
                    <% } else {%>
                        <div class="iniciarSesion">
                            <i class="fa-regular fa-user"></i>
                            <h5><a href="/users/login">Ingresa</a></h5>
                        </div>
                    <% } %>
                </div>
                <div class="carrito">
                    <i class="fa-brands fa-opencart"></i>
                    <h5><a href="/products/Carrito">Carrito</a></h5>
                </div>
            </div>
            <div class="pagos">
                <h5><a href="/products/productsList">Productos</a></h5>
            </div>
            <div class="ofertas">
                <h5><a href="/products/ofertas">Ofertas</a></h5>
            </div>
            <div class="categorias">
                <h5 class="palabra">Categorías</h5>
                <div class="flecha">
                    <i id="fechaCat" class="fa-solid fa-caret-down"></i>
                </div>
            </div>
            <div class="categoriaProductos">
                <h5><a href="/products/familiares">Familiares</a></h5>
                <h5><a href="/products/estrategia">Estrategia</a></h5>
                <h5><a href="/products/previa">Previa</a></h5>
            </div>
        </div>
    </div>
    <div class="contenedorHeaderDesktop">
        <div class="logo">
            <a href="/"><img src="/images/sinfondo.png" alt="logo"></a>
            <h3 class="oculto">Juegos de mesa</h3>
        </div>
